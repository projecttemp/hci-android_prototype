<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".Schedule">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="From:"
            android:id="@+id/schFrom"
            android:layout_weight="0.2"
            android:typeface="sans"
            android:textAlignment="center"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/schFromEnter"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:textAlignment="inherit"
            android:typeface="sans"
            android:text=""
            android:padding="3dp"
            android:textSize="15dp"
            android:background="#0FF"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="..."
            android:id="@+id/schFromMore"
            android:layout_weight="0.1"
            android:textAlignment="center"
            android:typeface="sans"
            android:gravity="center_vertical"
            android:padding="1dp"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="To:"
            android:id="@+id/schTo"
            android:layout_weight="0.2"
            android:typeface="sans"
            android:textAlignment="center"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/schToEnter"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:textAlignment="inherit"
            android:typeface="sans"
            android:text=""
            android:padding="3dp"
            android:textSize="15dp"
            android:background="#0FF"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="..."
            android:id="@+id/schToMore"
            android:layout_weight="0.1"
            android:textAlignment="center"
            android:typeface="sans"
            android:gravity="center_vertical"
            android:padding="1dp"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Company:"
            android:id="@+id/schCompany"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:typeface="sans"
            android:layout_weight="0.3" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/schCompanySel"
            android:background="@android:drawable/arrow_down_float"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:layout_weight="0.25" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"></LinearLayout>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/schBtnFav"
                android:textAlignment="center"
                android:typeface="sans"
                android:background="@android:drawable/btn_star_big_on"
                android:layout_weight="0.3" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="T"
                android:id="@+id/schBtnTime"
                android:layout_weight="0.35"
                android:typeface="sans"
                android:textAlignment="center"
                android:textSize="12dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15">

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Route:"
            android:id="@+id/schRoute"
            android:typeface="sans"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:layout_weight="0.2" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/schRouteSel"
            android:layout_weight="0.25"
            android:gravity="center_vertical"
            android:background="@android:drawable/arrow_down_float"
            android:spinnerMode="dropdown"
            android:textAlignment="center" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="!"
                android:textSize="60dp"
                android:id="@+id/textView2"
                android:typeface="sans"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textColor="#ff0000"
                android:layout_weight="0.1"
                android:background="#59ff00" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/textView3"
                android:textAlignment="center"
                android:typeface="sans"
                android:layout_weight="0.9"
                android:gravity="center_vertical"
                android:background="#FF59FF00" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/schTimeList"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/linearLayout"
            android:background="#ffee00"
            android:textAlignment="center"
            android:layout_below="@+id/linearLayout2" >

        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/schTextFrom"
                android:layout_weight="0.5"
                android:typeface="sans"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/schTextTo"
                android:layout_weight="0.5"
                android:typeface="sans"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="12dp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>